# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                           controllers.StatusController.index


GET     /oauth/:count               controllers.OAuthController.oauth(count: Int)
GET     /login                      controllers.LoginController.login


GET     /pingback                   controllers.StatusController.ping
GET     /healthcheck                controllers.StatusController.healthcheck


GET     /subscribe                  controllers.SubscribeController.subscribe



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
